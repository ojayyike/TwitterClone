extends layouts/login-layout.pug 

block content
    .loginContainer
        h1 Register  
        form(method="post") 
            input#userName(type="text", name= "firstName", placeholder ="First Name", required="")
            input#userName(type="text", name= "lastName", placeholder ="Last Name", required="")
            input#userName(type="email", name= "email", placeholder ="Email", required="")
            input#userName(type="password", name="password", placeholder ="Password", required="")
            input#userName(type="password", name="passwordConf", placeholder ="Confirm Password", required="")
            input(type="submit", value="Login")
            br
            a(href="/login") Already have an account? Sign in here.